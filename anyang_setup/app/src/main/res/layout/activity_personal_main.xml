<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".PersonalMainActivity">

    <ScrollView
        android:id="@+id/scrollView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        >

        <ImageView
            android:id="@+id/ID_Picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="41dp"
            app:srcCompat="@drawable/ic_profile" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:text="성명 :" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="50dp"
            android:text=""
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="80dp"
            android:text="학번 :" />

        <TextView
            android:id="@+id/StudentID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="80dp"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="110dp"
            android:text="학과 :" />

        <TextView
            android:id="@+id/Major"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="110dp"
            android:text="" />

        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_corners">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="취득학점 :" />

            <TextView
                android:id="@+id/Earned_Credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:text="" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:text="잔여학점 :" />

            <TextView
                android:id="@+id/Remaining_Credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="20dp"
                android:text="" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="전공학점 :" />

            <TextView
                android:id="@+id/major_Credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:text="" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                android:text="교양학점 :" />

            <TextView
                android:id="@+id/Liberal_Arts_Credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="50dp"
                android:text="" />


            <Button
                android:id="@+id/diagnosis"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button"
                android:text="진단"
                android:textSize="15dp" />

        </RelativeLayout>








        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="483dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_corners">

            <Button
                android:id="@+id/personal_write_button"
                android:layout_width="362dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:text="자소서 작성"
                tools:ignore="UnknownId" />

            <Button
                android:id="@+id/personal_loocker_button"
                android:layout_width="362dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/personal_write_button"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="자소서 보관함" />

            <Button
                android:id="@+id/personal_gpt_button"
                android:layout_width="362dp"
                android:layout_height="70dp"
                android:layout_below="@id/personal_loocker_button"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="gpt형 도와줘" />

        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>