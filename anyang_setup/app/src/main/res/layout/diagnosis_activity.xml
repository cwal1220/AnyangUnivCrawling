<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="30dp"
                android:text="진단 결과"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/shape_corners">

                <TextView
                    android:id="@+id/totalCurrentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:text="취득학점"
                    android:textSize="17dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/graduateBaseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:text="졸업학점"
                    android:textSize="17dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/totalRemainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-50dp"
                android:gravity="center"
                android:text="현재 9 학점이 부족합니다."
                android:textSize="17dp" />

            <TextView
                android:id="@+id/General_Education_Requirement4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-50dp"
                android:gravity="center"
                android:text="--학년 평균 취득 학점은 --입니다."
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/General_Education_Requirement_Layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/shape_corners">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/requiredSubjectsTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20px"
                    android:stretchColumns="*">
                    <TableRow>
                        <TextView
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="구분"
                            android:textStyle="bold" />

                        <TextView
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="과목명"
                            android:textStyle="bold"/>
                        <TextView
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="이수여부"
                            android:textStyle="bold"/>
                    </TableRow>

                </TableLayout>
                </ScrollView>
            </LinearLayout>

            <TextView
                android:id="@+id/General_Education_Requirement5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-50dp"
                android:gravity="center"
                android:text="-- 과목을 이수 하셔야 합니다."
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/General_Education_Requirement_Layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/shape_corners">

                <TableLayout
                android:id="@+id/abilitySubjectsTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:stretchColumns="*">
                <TableRow>
                    <TextView
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="의사소통"
                        android:textStyle="bold" />
                    <TextView
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="글로벌"
                        android:textStyle="bold"/>
                    <TextView
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="문제해결"
                        android:textStyle="bold"/>
                    <TextView
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="인성영성"
                        android:textStyle="bold" />
                    <TextView
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="리더십"
                        android:textStyle="bold" />
                    <TextView
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="융합실무"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/General_Education_Requirement8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-50dp"
                android:gravity="center"
                android:text="-- 역량이 부족합니다!
                \n 교양의 역량을 확인하고 신청하세요!"
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/General_Education_Requirement_Layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/shape_corners">

                <TableLayout
                    android:id="@+id/chapelTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:stretchColumns="*">
                    <TableRow>
                        <TextView
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="구분"
                            android:textStyle="bold" />
                        <TextView
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="기준학기 수"
                            android:textStyle="bold" />
                        <TextView
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="등록/이수학기 수"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/General_Education_Requirement9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-50dp"
                android:gravity="center"
                android:text="--번 채플을 더 수강하셔야 합니다."
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/General_Education_Requirement_Layout6"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/shape_corners">

                <TextView
                    android:id="@+id/graduateResultText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="졸업 인증(졸업 작품)/ (ex 미통과)"
                    android:textSize="17dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/General_Education_Requirement11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-50dp"
                android:gravity="center"
                android:text=""
                android:textSize="17dp" />

            <Button
                android:id="@+id/finalDiagnosisButton"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:text="최종진단" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>